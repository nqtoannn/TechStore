<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid android:color="#03A9F4" /> <!-- Màu nền khi nút được nhấn -->
            <corners android:radius="8dp" /> <!-- Độ cong của góc -->
            <stroke android:color="#000000" android:width="1dp"/> <!-- Viền xung quanh -->
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#ff9800" /> <!-- Màu nền mặc định -->
            <corners android:radius="8dp" /> <!-- Độ cong của góc -->
            <stroke android:color="#000000" android:width="1dp"/> <!-- Viền xung quanh -->
        </shape>
    </item>
</selector>
