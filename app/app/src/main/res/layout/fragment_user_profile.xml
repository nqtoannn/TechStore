<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.manage.UserProfileUpdateFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/lableName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/blue"
                android:text="Thay đổi thông tin"
                android:textColor="@color/black"
                android:textSize="25sp"
                android:textStyle="bold"
                android:textAlignment="center"
                android:height="40dp"/>

            <androidx.cardview.widget.CardView
                android:id="@+id/cardImage"
                android:layout_width="380dp"
                android:layout_height="380dp"
                android:layout_gravity="center"
                android:layout_marginTop="10dp">

                <ImageView
                    android:id="@+id/detailImage"
                    android:layout_width="380dp"
                    android:layout_height="380dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="10dp"
                    android:src="@drawable/imgcustomer" />
                <!--android:scaleType="centerCrop"-->

            </androidx.cardview.widget.CardView>
        </LinearLayout>

        <!-- Các TextView để hiển thị thông tin chi tiết của user -->
        <EditText
            android:id="@+id/text_full_name"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:hint="Họ và tên"
            android:textColor="@color/lavender"
            android:textSize="20sp"
            android:background="@drawable/round_back_dark_blue5_15"
            android:maxLines="1"
            android:textStyle="bold"
            android:layout_marginTop="16dp"
            android:layout_marginStart="25dp"
            android:layout_marginEnd="25dp"/>
        <EditText
            android:id="@+id/text_user_name"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:hint="Tên người dùng"
            android:textColor="@color/lavender"
            android:textSize="20sp"
            android:background="@drawable/round_back_dark_blue5_15"
            android:maxLines="1"
            android:textStyle="bold"
            android:layout_marginTop="8dp"
            android:layout_marginStart="25dp"
            android:layout_marginEnd="25dp"/>

        <EditText
            android:id="@+id/text_address"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:hint="Địa chỉ"
            android:textColor="@color/lavender"
            android:background="@drawable/round_back_dark_blue5_15"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_marginStart="25dp"
            android:layout_marginEnd="25dp"
            android:layout_marginTop="8dp"/>
        <EditText
            android:id="@+id/text_phone_number"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:hint="Số điện thoại:"
            android:textColor="@color/lavender"
            android:background="@drawable/round_back_dark_blue5_15"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_marginStart="25dp"
            android:layout_marginEnd="25dp"
            android:layout_marginTop="8dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginTop="20dp">
            <androidx.appcompat.widget.AppCompatButton
                android:layout_width="200dp"
                android:layout_height="55dp"
                android:id="@+id/btn_save"
                android:text="Lưu thông tin"
                android:textSize="18sp"
                android:textStyle="bold"
                android:background="@drawable/round_back_primary"
                android:layout_marginEnd="20dp"
                android:layout_marginStart="20dp"
                android:textColor="#FFFFFF"
                >
            </androidx.appcompat.widget.AppCompatButton>
        </LinearLayout>
    </LinearLayout>

</FrameLayout>